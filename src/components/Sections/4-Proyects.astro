---
import { Image } from 'astro:assets';

const {
  title = 'Proyectos',
  subtitle = 'Conoce algunos de nuestros trabajos destacados',
  proyectos = [],
} = Astro.props;
---

<div class='bg-proyects'>
  <div class='container container-width'>
    <div class='text-right border-r-8 pr-3 border-[var(--borders)]'>
      <h1
        class='!text-[#0F555A]'
        data-aos='fade-left'
        data-aos-delay='200'
      >
        {title}
      </h1>
      <h2
        data-aos='fade-left'
        data-aos-delay='400'
      >
        {subtitle}
      </h2>
    </div>
    <div class='card-container'>
      {
        // @ts-ignore
        proyectos.slice(0, 3).map((proyecto, index) => (
          <div
            class='cards animation-card'
            data-aos='fade-up'
            data-aos-delay={(index + 2) * 200}
          >
            <div class='image-container'>
              <Image
                class='image-style'
                src={proyecto.featuredImage.url}
                alt={proyecto.featuredImage.alt}
                width={400}
                height={200}
              />
            </div>
            <div class='cards-content'>
              <h3 class='title-card'>{proyecto.title}</h3>
              <p class='text-card'>{proyecto.shortDescription}</p>
              <div class='item-meta'>
                <p class='meta-item'>üìç {proyecto.location}</p>
                <p class='meta-item'>üå± {proyecto.plantCount}+ Plantas</p>
                <p class='meta-item'>
                  ‚è±Ô∏è {proyecto.duration} {proyecto.durationType}
                </p>
              </div>
              <a
                href={`/proyectos/${proyecto.slug}`}
                class='read-more'
              >
                Leer caso completo
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  @reference 'tailwindcss';

  /* === LAYOUT PRINCIPAL === */
  .bg-proyects {
    @apply bg-[var(--background2)];
  }

  .container {
    @apply min-h-[calc(100vh-15rem)] flex flex-col justify-between relative text-left;
    @apply py-20 lg:py-[160px] px-4 xl:px-0 gap-20;
  }

  /* === INTRODUCCI√ìN === */

  h1 {
    @apply text-balance;
  }

  /* === CONTENEDOR DE TARJETAS === */
  .card-container {
    @apply grid grid-cols-1 grid-rows-3 gap-10 justify-center items-center;
  }

  /* === TARJETA PRINCIPAL === */
  .cards {
    @apply min-h-[400px] h-full bg-[var(--bg-cards)] p-4 lg:pl-0 grid grid-rows-[auto_1fr] grid-cols-[1fr] lg:grid-rows-[1fr] lg:grid-cols-[auto_1fr] gap-10;
    @apply w-full rounded-md;
  }

  /* === IMAGEN === */
  .image-container {
    @apply w-full h-full flex justify-center items-center lg:w-[500px] lg:h-[320px] pt-0 lg:pt-[45px];
    max-height: 320px !important; /* Altura fija para todas las im√°genes */
    max-width: 500px !important;
    overflow: hidden;
  }

  .image-style {
    @apply transition-all ease-in-out duration-500;
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
  }

  .cards:hover .image-container .image-style {
    @apply brightness-75;
  }

  /* === CONTENIDO TEXTO === */
  .cards-content {
    @apply grid grid-rows-[auto_1fr_auto_auto] items-start lg:p-[45px] gap-4;
  }

  .title-card {
    @apply text-2xl font-bold !text-[#0F555A];
  }

  .text-card {
    @apply line-clamp-3 lg:line-clamp-5 overflow-hidden text-lg;
  }

  /* === METADATA === */
  .item-meta {
    @apply flex gap-2;
  }

  .meta-item {
    @apply text-sm;
  }

  /* === BOT√ìN LEER M√ÅS === */
  .read-more {
    @apply inline-flex items-center gap-2 text-[#0F555A] font-medium transition-all duration-500 ease-in-out;
  }

  .read-more:hover {
    @apply translate-x-[10px];
  }
</style>
