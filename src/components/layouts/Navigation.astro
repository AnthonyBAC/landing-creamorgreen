---
import { Image } from 'astro:assets';
---

<nav class='nav-container'>
  <!-- Lado izquierdo -->
  <div class='nav-left'>
    <ul class='nav-list'>
      <a href='/'>
        <li class='nav-items'>Inicio</li>
      </a>
      <a href='/servicios'>
        <li class='nav-items'>Servicios</li>
      </a>
      <a href='/proyectos'>
        <li class='nav-items'>Noticias</li>
      </a>
      <a href='/catalogo'>
        <li class='nav-items'>Cat√°logo</li>
      </a>
    </ul>
  </div>

  <!-- Centro - Logo -->
  <div class='nav-center'>
    <Image
      src='/logo.svg'
      alt='Logo'
      width={50}
      height={50}
    />
  </div>

  <!-- Lado derecho -->
  <div class='nav-right'>
    <a
      class='instagram-button'
      href='https://instagram.com'
      target='_blank'
      rel='noopener noreferrer'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        viewBox='0 0 24 24'
        width='100%'
        height='100%'
        class='instagram-icon'
      >
        <title>instagram</title>
        <path
          fill='currentColor'
          aria-hidden='true'
          focusable='false'
          d='M7.8,2H16.2C19.4,2 22,4.6 22,7.8V16.2A5.8,5.8 0 0,1 16.2,22H7.8C4.6,22 2,19.4 2,16.2V7.8A5.8,5.8 0 0,1 7.8,2M7.6,4A3.6,3.6 0 0,0 4,7.6V16.4C4,18.39 5.61,20 7.6,20H16.4A3.6,3.6 0 0,0 20,16.4V7.6C20,5.61 18.39,4 16.4,4H7.6M17.25,5.5A1.25,1.25 0 0,1 18.5,6.75A1.25,1.25 0 0,1 17.25,8A1.25,1.25 0 0,1 16,6.75A1.25,1.25 0 0,1 17.25,5.5M12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9Z'
        ></path>
      </svg>
    </a>
  </div>
</nav>

<style>
  @import 'tailwindcss';
  /* FONTS DEFINE ON GLOBAL.CSS */
  .nav-container {
    @apply grid grid-cols-[1fr_auto_1fr];
    @apply items-end;
    @apply max-w-[1536px];
    @apply mx-auto;
    @apply px-8 pb-2 pt-4 w-full mb-5;
    @apply border-b border-[var(--sub-colors)];
    @apply text-[var(--sub-colors)];
  }

  .nav-right {
    @apply flex justify-self-end items-end;
  }

  .nav-list {
    @apply flex gap-5;
    @apply list-none;
    @apply m-0 p-0;
  }

  .nav-items {
    @apply text-[#333333];
    @apply font-medium;
    @apply transition-colors duration-300 cursor-pointer hover:text-[#7FB069];
  }

  .instagram-button {
    @apply flex items-center;
    @apply size-[24px];
    @apply inline-flex;
    @apply cursor-pointer;
    @apply transition-all duration-300 ease-in-out;
  }

  .instagram-button:hover {
    @apply text-[#e4405f] size-[28px];
  }

  /* MEDIA QUERIES */
  @media (max-width: 768px) {
    .nav-container {
      @apply grid-cols-[auto_1fr_auto] gap-4;
    }

    .nav-list {
      @apply gap-3 text-sm;
    }
  }
</style>
