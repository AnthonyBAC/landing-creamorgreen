---
import '~/styles/global.css';
import Header from '~/components/layouts/Header.astro';
import Section0 from '~/components/Sections/0-HeroSection.astro';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <link
      rel='preconnect'
      href='https://fonts.googleapis.com'
    />
    <link
      rel='preconnect'
      href='https://fonts.gstatic.com'
      crossorigin
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;300;400;700&display=swap'
      rel='stylesheet'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{Astro.props.title}</title>
  </head>

  <body>
    <Header />

    <div class='main-container'>
      <slot />
    </div>
  </body>
</html>
<style is:global>
  .main-container {
    min-height: auto;
  }
</style>
<script>
  import 'flowbite';
</script>
