---
import '~/styles/global.css';
import Header from '~/components/layouts/Header.astro';
import Footer from '~/components/layouts/Footer.astro';
import Whatsapp from '~/components/ui/Whatsapp.astro';
import Slider from '~/components/ui/Slider.astro';
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    />
    <!-- FAVICON -->
    <!-- FAVICON MEJORADO -->
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.ico?v=1.0'
    />
    <!-- END FAVICON -->

    <!-- FONTS -->
    <link
      rel='preconnect'
      href='https://fonts.googleapis.com'
    />
    <link
      rel='preconnect'
      href='https://fonts.gstatic.com'
      crossorigin
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap'
      rel='stylesheet'
    />
    <!-- END FONTS -->
    <link
      rel='stylesheet'
      href='https://unpkg.com/aos@2.3.1/dist/aos.css'
    />

    <meta
      name='generator'
      content={Astro.generator}
    />

    <!-- TITLE -->
    <title>
      {Astro.props.title || 'Ambientación Plantas | Espacios Únicos | Santiago'}
    </title>
    <!-- END TITLE -->

    <!-- DESCRIPTION -->

    <meta
      name='description'
      content={Astro.props.description ||
        'Transformamos oficinas y eventos con plantas y jardines únicos. +100 proyectos realizados en Santiago. Diseños personalizados que elevan cada espacio.'}
    />
    <!-- END DESCRIPTION -->

    <!-- OPENGRAPH -->
    <meta
      property='og:title'
      content={Astro.props.title || 'Ambientación Plantas Santiago'}
    />
    <meta
      property='og:description'
      content={Astro.props.description ||
        'Transformamos oficinas y eventos con plantas y jardines únicos. +100 proyectos realizados.'}
    />
    <meta
      property='og:image'
      content={Astro.props.ogImage || '/slide_image-1.jpg'}
    />
    <meta
      property='og:type'
      content='website'
    />
    <meta
      property='og:url'
      content={Astro.url}
    />
    <!-- END OPENGRAPH -->

    <!-- SCHEMA -->
    <script type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Creamor Green",
        "description": "Especialistas en ambientación y diseño de espacios corporativos con plantas. Transformamos oficinas y eventos en Santiago.",
        "areaServed": {
          "@type": "City",
          "name": "Santiago",
          "addressCountry": "CL"
        },
        "serviceType": [
          "Ambientación plantas oficinas",
          "Ambientación plantas eventos",
          "Diseño espacios corporativos",
          "Plantas para eventos empresariales",
          "Plantas para eventos matrimoniales",
          "Plantas para eventos corporativos",
          "Plantas para eventos religiosos",
          "Jardines verticales oficinas"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+56-9-XXXX-XXXX",
          "contactType": "customer service",
          "availableLanguage": "Spanish"
        },
        "url": "{Astro.site}"
      }
    </script>
    <!-- END SCHEMA -->
    <!-- CANONICAL -->
    <link
      rel='canonical'
      href={Astro.url}
    />
    <meta
      name='robots'
      content='index, follow'
    />
    <!-- END CANONICAL -->
  </head>

  <body class='relative'>
    <Whatsapp />
    <Header />
    <Slider />
    <div class='main-container'>
      <slot />
    </div>

    <Footer />
    <script src='src/scripts/aos.js'></script>
  </body>
</html>
<style is:global>
  .main-container {
    min-height: auto;
  }
</style>

<script>
  import 'flowbite';
</script>
