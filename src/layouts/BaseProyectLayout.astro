---
import '~/styles/global.css';
import Header from '~/components/layouts/Header.astro';
import Footer from '~/components/layouts/Footer.astro';
import Whatsapp from '~/components/ui/Whatsapp.astro';
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    />
    <!-- FAVICON -->
    <!-- FAVICON MEJORADO -->
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.ico?v=1.0'
    />
    <!-- END FAVICON -->

    <!-- FONTS -->
    <link
      rel='preconnect'
      href='https://fonts.googleapis.com'
    />
    <link
      rel='preconnect'
      href='https://fonts.gstatic.com'
      crossorigin
    />
    <link
      href='https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap'
      rel='stylesheet'
    />
    <!-- END FONTS -->
    <link
      rel='stylesheet'
      href='https://unpkg.com/aos@2.3.1/dist/aos.css'
    />

    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{Astro.props.title}</title>
  </head>

  <body class='relative'>
    <Whatsapp />
    <Header />

    <div class='main-container'>
      <slot />
    </div>

    <Footer />
    <script src='src/scripts/aos.js'></script>
  </body>
</html>

<style>
  body {
    min-height: 100vh;

    overflow-x: hidden;
  }
</style>
<script>
  import 'flowbite';
</script>
