</BaseProyectLayout>
<style>
  @reference 'tailwindcss';

  /* === LAYOUT PRINCIPAL === */
  .bg-proyects {
    @apply bg-[var(--background2)];
  }

  /* === INTRODUCCI√ìN === */

  h1 {
    @apply text-balance;
  }

  /* === CONTENEDOR DE TARJETAS === */
  .card-container {
    @apply grid grid-cols-1 gap-10 justify-center items-center grid-rows-[repeat(auto-fit, 400px)] p-8;
  }

  /* === TARJETA PRINCIPAL === */
  .cards {
    @apply min-h-[400px] max-h-[400px] bg-[var(--bg-cards)] p-4 pl-0 grid grid-rows-[1fr] grid-cols-[auto_1fr] gap-10;
    @apply w-full rounded-md;
  }

  /* === IMAGEN === */
  .image-container {
    @apply w-full h-full flex justify-center items-center;
  }

  .image-style {
    @apply transition-all ease-in-out duration-500;
  }

  .cards:hover .image-container .image-style {
    @apply brightness-75;
  }

  /* === CONTENIDO TEXTO === */
  .cards-content {
    @apply grid grid-rows-[auto_1fr_auto_auto] items-start p-[45px] gap-4;
  }

  .title-card {
    @apply text-2xl font-bold;
  }

  .text-card {
    @apply line-clamp-5 overflow-hidden text-lg;
  }

  /* === METADATA === */
  .item-meta {
    @apply flex gap-2;
  }

  .meta-item {
    @apply text-sm;
  }

  /* === BOT√ìN LEER M√ÅS === */
  .read-more {
    @apply inline-flex items-center gap-2 text-[#7fb069] font-medium transition-all duration-500 ease-in-out;
  }

  .read-more:hover {
    @apply text-[#5a8a4a] translate-x-[10px];
  }
</style>
